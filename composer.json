{
    "name": "doublethreedigital/sc-digital-products",
    "description": "Sell digital products with Simple Commerce",
    "license": "proprietary",
    "autoload": {
        "psr-4": {
            "DoubleThreeDigital\\DigitalProducts\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DoubleThreeDigital\\DigitalProducts\\Tests\\": "tests"
        }
    },
    "extra": {
        "statamic": {
            "name": "Digital Products",
            "description": "Sell digital products with Simple Commerce"
        },
        "laravel": {
            "providers": [
                "DoubleThreeDigital\\DigitalProducts\\ServiceProvider"
            ]
        }
    },
    "require": {
        "doublethreedigital/simple-commerce": "3.0.*"
    },
    "require-dev": {
        "nunomaduro/collision": "^4.2 || ^5.0 || ^6.1",
        "orchestra/testbench": "^5.0 || ^6.0 || ^7.0"
    },
    "scripts": {
        "lint": [
            "php-cs-fixer fix ./src"
        ],
        "test": [
            "./vendor/bin/phpunit"
        ]
    },
    "minimum-stability": "dev",
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pixelfear/composer-dist-plugin": true
        }
    }
}
